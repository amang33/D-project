<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 2021.12.21 한건희  -->
<mapper namespace="mapper.cart">
	<!-- 리절트 맵 정의 -->
	<resultMap id="cartResult" type="CartVO">
		<result property="cart_id" column="cart_id" />
		<result property="product_id" column="product_id" />
		<result property="user_id" column="user_id" />
		<result property="cart_count" column="cart_count" />
	</resultMap>
	
	<!-- 장바구니 리스트 -->
	<select id="selectCartList" resultMap="cartResult" parameterType="CartVO">
		<![CDATA[
			select * from cart where user_id = #{user_id}
		]]>
	</select>
	
	<!-- 장바구니 담기 -->
	<insert id="insertProductInCart" parameterType="CartVO">
		<![CDATA[
			insert into cart (cart_id, product_id,
							user_id, cart_count)
						values (null, #{product_id}, 
							${user_id}, ${cart_count})
		]]>
	</insert>
	
</mapper>